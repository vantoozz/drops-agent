{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "strict": true
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules"
  ]
}